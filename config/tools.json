{
  "tools": {
    "git-mcp": {
      "path": "tools/git-mcp.js",
      "timeout": 10000,
      "retries": 3,
      "baseDelay": 1000,
      "allowedActions": [
        "git_status",
        "git_diff",
        "git_log",
        "git_branch",
        "git_commit"
      ]
    },
    "filesystem-mcp": {
      "path": "tools/filesystem-mcp.js",
      "timeout": 10000,
      "retries": 3,
      "baseDelay": 1000,
      "allowedActions": [
        "read_file",
        "write_file",
        "create_directory",
        "list_directory",
        "search_files",
        "get_file_info",
        "move_file",
        "edit_block"
      ]
    }
  }
}